<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:id="@+id/popup_star_view_layout">

    <TextView
        android:id="@+id/popup_star_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="It is I, Leclerc!"
        android:textColor="@color/colorNumber"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/popup_star_view_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_star_view_text"
        android:layout_marginTop="10dp"
        android:text="Snippet!"
        android:textColor="@color/colorTitle60"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/popup_star_view_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_star_view_snippet"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>